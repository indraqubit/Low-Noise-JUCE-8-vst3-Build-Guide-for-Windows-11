# Minimal CMakeLists.txt for JUCE 8 VST3 Plugin
cmake_minimum_required(VERSION 3.20)
project(MyPlugin VERSION 1.0.0)

# Find JUCE (adjust path to your JUCE installation)
set(JUCE_PATH "C:/Users/indraqubit/Downloads/JUCE")
list(APPEND CMAKE_MODULE_PATH "${JUCE_PATH}/cmake")

# JUCE Setup
juce_set_version(1.0.0)
juce_add_plugin(MyPlugin
    VERSION_STRING "1.0.0"
    COMPANY_NAME "MyCompany"
    COMPANY_COPYRIGHT "Copyright Â© 2025"
    PLUGIN_MANUFACTURER_CODE "MyCo"
    PLUGIN_CODE "MyPl"
    FORMATS VST3
    NEEDS_MIDI_INPUT FALSE
    NEEDS_MIDI_OUTPUT FALSE
    IS_SYNTH FALSE
    EDITOR_WANTS_KEYBOARD_FOCUS FALSE
)

# Source files
set(SOURCES
    Source/PluginProcessor.cpp
    Source/PluginEditor.cpp
)

# Add sources to target
target_sources(MyPlugin PRIVATE ${SOURCES})

# Link JUCE modules
target_link_libraries(MyPlugin
    PRIVATE
        juce::juce_core
        juce::juce_events
        juce::juce_graphics
        juce::juce_gui_basics
        juce::juce_dsp
        juce::juce_audio_processors
)
